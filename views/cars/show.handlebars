<div class="row card-panel teal lighten-5">
  <h1 class="display-5 grey-text text-darken-5">{{car.title}}</h1>
  <div class="col s12 m8">
    <p>Posted By: {{car.user.firstName}} {{car.user.lastName}}</p>
    <div class="carousel carousel-slider center">
      <div class="carousel-fixed-item center">

      </div>
      {{#each car.images}}
      <div class="carousel-item white-text" href="#one!">
        <h2>{{car.title}} </h2>

        <p class="white-text">{{car.title}}</p>
        <img src={{imagePath}} alt="">
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col s12 m4">
    <table class="striped bordered">
      <tbody>
        <thead>
          <th>Car Details</th>
        </thead>
        <tr>
          <td>Price:</td>
          <td> ${{car.price}}</td>
        </tr>

        <tr>
          <td>Current Mileage:</td>
          <td> {{car.current_mileage}}</td>
        </tr>

        <tr>
          <td>Fuel:</td>
          <td> {{car.fuel}}</td>
        </tr>

        <tr>
          <td>Drive Train(Auto/Manual):</td>
          <td> {{car.drivetrain}}</td>
        </tr>

        <tr>
          <td>Exterior Color:</td>
          <td> {{car.exterior_color}}</td>
        </tr>

        <tr>
          <td>Interior Color:</td>
          <td> {{car.interior_color}}</td>
        </tr>



        <tr>
          <td>Mileage City:</td>
          <td> {{car.mileage_city}}</td>
        </tr>
        <tr>
          <td>Mileage Hwy:</td>
          <td> {{car.mileage_hwy}}</td>
        </tr>

        <tr>
          <td>style:</td>
          <td> {{car.style}}</td>
        </tr>

        <tr>
          <td>engine:</td>
          <td> {{car.engine}}</td>
        </tr>

      </tbody>
    </table>

  </div>

</div>

<div class="row card-panel teal lighten-5">
  {{#if car.allowComments}}
  <div class="card">
    <div class="card-content">
      <span class="card-title">Comments</span>
      {{#if user}}
      <form action="/cars/comment/{{car.id}}" method="post">
        <div class="input-field">
          <textarea name="commentBody" class="materialize-textarea"></textarea>
          <label for="commentBody">Add Comment</label>
        </div>
        <input type="submit" value="submit" class="btn">
      </form>
      {{else}}
      <p><a href="/users/login/">Login </a>Please login to leave a comment</p>
      {{/if}}
    </div>
  </div>


  {{#each car.comments}}
  <div class="card">
    <div class="card-content">
      <h5>{{commentBody}}</h5>
      <div class="chip">
        <img src="{{commentUser.image}}">
        {{commentUser.firstName}} {{commentUser.lastName}}
        <a href="/cars/my/{{commentUser.id}}">{{commentUser.firstName}} {{commentUser.lastName}}</a>
      </div>
      <small>{{formatDate commentDate 'MMMM Do YYYY'}}</span>

    </div>
  </div>
  {{/each}}
  {{/if}}
</div>

<div class="row card-panel teal lighten-5">
  <h5 class="">Notes from Seller:</h1>
    <div class="col s12">
      {{ stripTags car.body }}
    </div>
</div>

<h5>Contact Seller By Email</h1>
  <div class="row card-panel teal lighten-5">
    <p>{{msg}}</p>
    <form action="/cars/contact/{{car.id}}" method="post" class="col s12">
      <div class=" row">
        <div class="input-field">
          <input type="text" name="subject" required>
          <label for="subject">Subject</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field">
          <h5>Please tell us.</h5>
          <textarea name="body" required></textarea>
        </div>
      </div>
      <input type="submit" value="Send" class="btn">
    </form>
  </div>